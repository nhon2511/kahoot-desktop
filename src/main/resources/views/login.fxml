<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.kahoot.client.LoginController"
            prefWidth="450" prefHeight="400"
            style="-fx-background-color: #f5f5f5;"> <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

    <Label text="Kahoot Desktop" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #7B2CBF;" />

    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 0);">

        <Label text="Đăng nhập tài khoản" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <TextField fx:id="usernameField" promptText="Tên đăng nhập" prefWidth="250" prefHeight="35" />

        <PasswordField fx:id="passwordField" promptText="Mật khẩu" prefWidth="250" prefHeight="35" />

        <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" text="" />

        <Button text="Đăng nhập"
                onAction="#handleLoginButtonAction"
                prefWidth="250" prefHeight="40"
                style="-fx-background-color: #7B2CBF; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" />

        <Separator prefWidth="250" />

        <VBox spacing="5" alignment="CENTER">

            <Button text="Tham gia Game (Player Mode)"
                    onAction="#handleJoinGameAction"
                    prefWidth="250" prefHeight="40"
                    style="-fx-background-color: #00B1D2; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" />

            <HBox spacing="5" alignment="CENTER">
                <Label text="Chưa có tài khoản?" style="-fx-font-size: 12px;" />
                <Hyperlink text="Đăng ký" onAction="#handleRegisterLinkAction"
                           style="-fx-font-size: 12px; -fx-text-fill: #7B2CBF;" />
            </HBox>
        </VBox>
    </VBox>
</VBox>
</AnchorPane>