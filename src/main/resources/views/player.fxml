<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.kahoot.client.PlayerController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: #f5f5f5;">
    
    <VBox spacing="30" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="Tham gia Game Kahoot" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #7B2CBF;" />
        
        <VBox spacing="20" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40;">
            <VBox spacing="10" alignment="CENTER">
                <Label text="IP Server:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                <TextField fx:id="serverIpField" promptText="192.168.1.102" text="192.168.1.102"
                          style="-fx-font-size: 18px; -fx-pref-width: 300px; -fx-pref-height: 40px;" />
            </VBox>
            
            <VBox spacing="10" alignment="CENTER">
                <Label text="Port Server:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                <TextField fx:id="serverPortField" promptText="8888" text="8888"
                          style="-fx-font-size: 18px; -fx-pref-width: 300px; -fx-pref-height: 40px;" />
            </VBox>
            
            <VBox spacing="10" alignment="CENTER">
                <Label text="Mã PIN:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                <TextField fx:id="pinCodeField" promptText="Nhập mã PIN" 
                          style="-fx-font-size: 18px; -fx-pref-width: 300px; -fx-pref-height: 40px;" />
            </VBox>
            
            <VBox spacing="10" alignment="CENTER">
                <Label text="Tên của bạn:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                <TextField fx:id="playerNameField" promptText="Nhập tên của bạn" 
                          style="-fx-font-size: 18px; -fx-pref-width: 300px; -fx-pref-height: 40px;" />
            </VBox>
            
            <Separator prefWidth="350" />
            
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="joinButton" text="Tham gia Game" onAction="#handleJoinGameAction"
                        style="-fx-background-color: #7B2CBF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 30; -fx-font-size: 16px;" />
                <Button text="Đóng" onAction="#handleCloseAction"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" />
            </HBox>
            
            <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 12px; -fx-wrap-text: true;" text="" />
        </VBox>
    </VBox>
    
</AnchorPane>


