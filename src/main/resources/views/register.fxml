<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.kahoot.client.RegisterController"
            prefWidth="400" prefHeight="450"
            style="-fx-background-color: #f5f5f5;">
    
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="Kahoot Desktop" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #7B2CBF;" />
        
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
            <Label text="Đăng ký tài khoản" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            
            <TextField fx:id="usernameField" promptText="Tên đăng nhập" prefWidth="250" prefHeight="35" />
            
            <PasswordField fx:id="passwordField" promptText="Mật khẩu" prefWidth="250" prefHeight="35" />
            
            <PasswordField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu" prefWidth="250" prefHeight="35" />
            
            <TextField fx:id="emailField" promptText="Email" prefWidth="250" prefHeight="35" />
            
            <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" text="" />
            
            <Button text="Đăng ký" onAction="#handleRegisterButtonAction" 
                    prefWidth="250" prefHeight="40"
                    style="-fx-background-color: #7B2CBF; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" />
            
            <HBox spacing="5" alignment="CENTER">
                <Label text="Đã có tài khoản?" style="-fx-font-size: 12px;" />
                <Hyperlink text="Đăng nhập" onAction="#handleLoginLinkAction" 
                           style="-fx-font-size: 12px; -fx-text-fill: #7B2CBF;" />
            </HBox>
        </VBox>
    </VBox>
    
</AnchorPane>





